{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedDeclarations": true,
    "isolatedModules": true,
    "lib": [ "es2023" ],
    "module": "preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": [ "node" ],
    "verbatimModuleSyntax": true
  },
  "include": [ "src" ]
}
